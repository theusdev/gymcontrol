
    <div class="item">
      <div>Avatar URL</div>
      <div>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://"
        value="{{ instructor.avatar_url }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Instrutor</div>
      <div>
        <input 
          type="text"
          name="name"
          placeholder="Nome do Instrutor"
          value="{{ instructor.name }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input 
        type="date" 
        name="nascimento"
        value="{{ instructor.nascimento }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Sexo</div>
      <div>
          <span>
            <input 
            type="radio" 
            name="sexo" 
            value="M" {% if instructor.sexo == 'M' %}
              checked
            {% endif %}
            >Masculino
          </span>
          <span>
            <input 
            type="radio" 
            name="sexo" 
            value="F" {% if instructor.sexo == 'F' %}
              checked
            {% endif %}
            >Feminino
          </span>
      </div>
    </div>
  
  <div class="item">
      <div>Área de atuação</div>
      <div>
        <input 
        type="text"
        name="serviços"
        placeholder="Separe os serviços por vírgula"
        value="{{ instructor.serviços }}"

        >
      </div>
    </div>
    
    <button type="submit">Salvar</button>